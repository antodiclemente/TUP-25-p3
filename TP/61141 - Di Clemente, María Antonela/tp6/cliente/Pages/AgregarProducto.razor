@page "/productos/agregar"
@using cliente.Services
@using cliente.Models
@inject ApiService ApiService
@inject NavigationManager Navigation

<h3>Agregar Producto</h3>

<EditForm Model="producto" OnValidSubmit="GuardarProducto">
    <DataAnnotationsValidator />            <!-- Valida las reglas de anotaciones de datos del modelo -->
    <ValidationSummary />                   <!-- Muestra los errores de validación en el formulario -->

    <div class="mb-3">
        <label>Nombre:</label>
        <InputText class="form-control" @bind-Value="producto.Nombre" />        <!-- Input para el nombre del producto -->
    </div>

    <div class="mb-3">
        <label>Precio:</label>
        <InputNumber class="form-control" @bind-Value="producto.Precio" />      <!-- Input numérico para el precio -->
    </div>

    <button class="btn btn-primary" type="submit">Guardar</button>
</EditForm>

@code {
    private Producto producto = new();          // Modelo Producto para enlazar datos

    private async Task GuardarProducto()
    {
        var exito = await ApiService.CrearProductoAsync(producto);    // Llama al API para crear el producto
        if (exito)
        {
            Navigation.NavigateTo("/productos");            //navega al listado de productos
        }
    }
}
